<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity Course.
    -->
    <changeSet id="20170704162256-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="form_id"
                                 baseTableName="course"
                                 constraintName="fk_course_form_id"
                                 referencedColumnNames="id"
                                 referencedTableName="form"/>

        <addForeignKeyConstraint baseColumnNames="lesson_id"
                                 baseTableName="course"
                                 constraintName="fk_course_lesson_id"
                                 referencedColumnNames="id"
                                 referencedTableName="lesson"/>

        <addForeignKeyConstraint baseColumnNames="teacher_id"
                                 baseTableName="course"
                                 constraintName="fk_course_teacher_id"
                                 referencedColumnNames="id"
                                 referencedTableName="teacher"/>

        <addUniqueConstraint columnNames="form_id, lesson_id"
                             constraintName="unique_course_form_id_lesson_id"
                             tableName="course"/>

    </changeSet>
</databaseChangeLog>
